<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'list', book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td></td>
          <td>
            <%= link_to @book.title %>
          </td>
          <td><%= @book.body %></td>
          <td></td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>

  </div>
</div>
