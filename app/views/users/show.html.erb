<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>
<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'books/list', book: @book %>
    <div class="col-md-8 offser-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
    
          <% @books.each do |book| %>
            <tbody>
              <tr>
                <td></td>
                <td>
                  <a href="/books/:id">
                    <%= book.title %>
                  </a>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
            </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>
